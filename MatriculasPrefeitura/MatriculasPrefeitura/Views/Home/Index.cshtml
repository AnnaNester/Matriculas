@model List<Curso>
@using MatriculasPrefeitura.Models
    
@{
    ViewBag.Title = "Index";
    List<CategoriaCurso> categorias = ViewBag.Categorias;
}


<li class="nav-item">
    @Html.ActionLink("Alunos", "Index", "Aluno", null, new { @class = "nav-link" })
    @Html.ActionLink("Professores", "Index", "Professor", null, new { @class = "nav-link" })
    @Html.ActionLink("Cursos", "Index", "Curso", null, new { @class = "nav-link" })
    @Html.ActionLink("Cadastrar Novo Curso", "CadastrarCurso", "Curso", null, new { @class = "nav-link" })
    @Html.ActionLink("Cadastrar Categoria", "CadastrarCategoria", "Categoria", null, new { @class = "nav-link" })
</li>
    <ul style="text-align:center; margin-top: 30px; margin-bottom: 30px" class="nav nav-tabs">
        @foreach (CategoriaCurso cat in categorias)
        {
            <li class="nav-item">
                @Html.ActionLink(cat.NomeCategoria, "Index", "Home", new { id = cat.CategoriaId }, new { @class = "nav-link" })
            </li>
        }
    </ul>

    <div class="row" style="margin-top:30px">
        @foreach (var curso in Model)
        {
            <div class="col-sm-3" style="text-align:center; margin-bottom:30px">
                <img class="img-thumbnail" src="~/Images/@curso.FotoCurso" style="width:200px;height:150px;margin-bottom:15px" />
                @Html.ActionLink(curso.NomeCurso, "CursoDetalhe", "Home", new { id = curso.CursoId }, null)

            </div>
        }
    </div>

