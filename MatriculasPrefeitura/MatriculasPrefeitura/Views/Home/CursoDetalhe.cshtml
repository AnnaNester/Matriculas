@model MatriculasPrefeitura.Models.Curso

@{
    ViewBag.Title = "CursoDetalhe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CursoDetalhe</h2>

<table style="margin-left: 30px">
    <tr>
        <td colspan="2">
            <h4>@Model.NomeCurso</h4>
        </td>
    </tr>
    <tr>
        <td style="width:400px">
            <img src="~/Images/@Model.FotoCurso"
                 class="img-thumbnail" />
        </td>
        <td style="vertical-align: top; padding-left: 30px">
            <b>Descrição: </b>
            <br />
            @Model.DescricaoCurso<br />
            <b>Categoria: </b>@Model.CategoriaCurso.NomeCategoria<br />
        </td>
    </tr>
</table>