                @Html.ValidationMessageFor(model => model.FormacaoProfessor, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Foto do Professor", new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                <input type="file" name="fupImagem" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Cadastrar" class="btn btn-default" />
            </div>
        </div>

