@using MatriculasPrefeitura.Models
@model Aluno

<div>
    @using (Html.BeginForm("EditarAluno", "Aluno", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <fieldset>
            <legend>Editar Aluno</legend>
            @Html.ValidationSummary(true, null,
                new { @class = "text-danger" })
            @Html.HiddenFor(model => model.NumAluno)

            <div class="form-group">
                @Html.Label("Nome do Aluno",
                    new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.NomeAluno,
                        new
                        {
                            @class = "form-control",
                            @placeholder = "Nome do Aluno"
                        })
                    @Html.ValidationMessageFor(model => model.NomeAluno, null,
                        new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("CPF do Aluno",
                    new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.CPFAluno,
                        new
                        {
                            @class = "form-control",
                            @placeholder = "CPF do Aluno"
                        })
                    @Html.ValidationMessageFor(model => model.CPFAluno, null,
                        new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("CEP Aluno",
                    new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.CEP,
                        new
                        {
                            @class = "form-control",
                            @placeholder = "CEP Aluno"
                        })
                    @Html.ValidationMessageFor(model => model.CEP, null,
                        new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Logradouro Aluno",
                    new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.Logradouro,
                        new
                        {
                            @class = "form-control",
                            @placeholder = "Logradouro Aluno"
                        })
                    @Html.ValidationMessageFor(model => model.Logradouro, null,
                        new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Número Residência",
                    new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.Numero,
                        new
                        {
                            @class = "form-control",
                            @placeholder = "Número Residência"
                        })
                    @Html.ValidationMessageFor(model => model.Numero, null,
                        new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Bairro do Aluno",
                    new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.Bairro,
                        new
                        {
                            @class = "form-control",
                            @placeholder = "Bairro do Aluno"
                        })
                    @Html.ValidationMessageFor(model => model.Bairro, null,
                        new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Cidade do Aluno",
                    new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.Localidade,
                        new
                        {
                            @class = "form-control",
                            @placeholder = "Cidade do Aluno"
                        })
                    @Html.ValidationMessageFor(model => model.Localidade, null,
                        new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Estado do Aluno",
                    new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.UF,
                        new
                        {
                            @class = "form-control",
                            @placeholder = "Estado do Aluno"
                        })
                    @Html.ValidationMessageFor(model => model.UF, null,
                        new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <input type="submit" value="Salvar"
                           class="btn btn-primary">
                </div>
            </div>
        </fieldset>
    }
</div>
